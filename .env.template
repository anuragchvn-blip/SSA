# SSA Conjunction Analysis Engine - Environment Template
# COPY THIS FILE TO .env AND CUSTOMIZE FOR YOUR DEPLOYMENT

# DATABASE CONFIGURATION
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ssa_engine
POSTGRES_USER=ssa_user
POSTGRES_PASSWORD=  # Leave empty for demo mode, set for production

# REDIS CONFIGURATION (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# SPACE-TRACK API CREDENTIALS
# Register at: https://www.space-track.org
SPACETRACK_USERNAME=  # Required for real TLE data
SPACETRACK_PASSWORD=  # Required for real TLE data
SPACETRACK_RATE_LIMIT=300
SPACETRACK_BASE_URL=https://www.space-track.org

# API SECURITY
JWT_SECRET_KEY=super_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# LOGGING
LOG_LEVEL=INFO
LOG_FORMAT=json  # or console for development

# PATHS
DATA_STORAGE_PATH=./data
MODEL_VERSION_PATH=./models

# SCHEDULING
TLE_UPDATE_INTERVAL_HOURS=24
TLE_STALENESS_THRESHOLD_HOURS=72

# RATE LIMITING
API_RATE_LIMIT_REQUESTS_PER_MINUTE=60
API_MAX_CONCURRENT_REQUESTS=10

# APPLICATION
APP_NAME=SSA Conjunction Analysis Engine
APP_VERSION=1.0.0
DEBUG=False